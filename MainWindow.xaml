<Window x:Class="TEST2808.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEST2808"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="131,43,110.333,151.667" HorizontalAlignment="Center" Width="352"  >
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center"  >
                <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Height="43" Width="54"/>
                <TextBox HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="I love wpf" VerticalAlignment="Top" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center"  >
                <Label  Content="Width"/>
                <Slider Name="Width" IsSnapToTickEnabled="True" HorizontalAlignment="Left" Value="{Binding StartPoint}" Minimum="50" Maximum="100" Width="200" VerticalAlignment="Top"/>
                <Label Name="Value" Content="{Binding ElementName=Width, Path=Value}"/>
                <TextBlock Name="Size1" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center"  >
                <Label  Content="Hight"/>
                <Slider HorizontalAlignment="Left" IsSnapToTickEnabled="True" Minimum="50" Maximum="100" Name="Hight" Width="200" VerticalAlignment="Top"/>
                <Label Name="Value2"  Content="{Binding ElementName=Hight, Path=Value }"/>
                <TextBlock Name="Size2" />
            </StackPanel>

        </StackPanel>
        <Button  Click="Button_Click" Content="I LOVE WPF" HorizontalAlignment="Left" Margin="49,257,0,0" VerticalAlignment="Top" Width="{Binding ElementName=Width, Path=Value}" FontSize="10" Height="{Binding ElementName=Hight, Path=Value}"/>

    </Grid>
</Window>
